{
  "name": "pino-graylog-transport",
  "version": "1.0.0",
  "description": "Pino transport that sends log to graylog",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "test:load": "esbuild test/load/load-test.ts --bundle --outfile=dist/load-test.js --target=es2017 --format=esm --external:k6 --external:k6/* && (command -v k6 >/dev/null && k6 run dist/load-test.js || echo \"k6 not found. Install k6 to run load tests: https://k6.io/docs/getting-started/installation/\")",
    "test:smoke": "esbuild test/load/smoke-test.ts --bundle --outfile=dist/smoke-test.js --target=es2017 --format=esm --external:k6 --external:k6/* && (command -v k6 >/dev/null && k6 run dist/smoke-test.js || echo \"k6 not found. Install k6 to run load tests: https://k6.io/docs/getting-started/installation/\")",
    "benchmark": "ts-node test/benchmark/benchmark.ts",
    "benchmark:load": "esbuild test/benchmark/comparison-load-test.ts --bundle --outfile=dist/comparison-load-test.js --target=es2017 --format=esm --external:k6 --external:k6/* --tree-shaking=false --log-level=info && k6 run dist/comparison-load-test.js",
    "start:comparison-server": "ts-node test/benchmark/comparison-server.ts",
    "start:load-server": "ts-node test/load/server.ts",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci --write .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:setup": "ts-node scripts/setup-graylog.ts"
  },
  "keywords": [
    "pino",
    "transport",
    "graylog",
    "logging",
    "gelf"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pino-abstract-transport": "3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "1.3.5",
    "@types/chai": "^5.2.3",
    "@types/k6": "^1.4.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "chai": "6.2.2",
    "esbuild": "^0.27.2",
    "mitata": "^1.0.34",
    "mocha": "11.7.5",
    "pino": "10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "winston": "^3.19.0",
    "winston-log2gelf": "^2.4.1",
    "winston-transport": "^4.9.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
