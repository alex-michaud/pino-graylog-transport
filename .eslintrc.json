{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["test/load/*.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "globals": {
        "__ENV": "readonly",
        "__ITER": "readonly",
        "__VU": "readonly"
      }
    }
  ]
}


